<launch>
	<arg name="world_file" default="$(find ca_gazebo)/worlds/empty.world"/>

	<arg name="x_pos" default="0.0"/>
	<arg name="y_pos" default="0.0"/>
	<arg name="z_pos" default="0.0"/>

	<arg name="paused" default="false"/>
	<arg name="gui" default="true"/>
	<arg name="debug" default="false"/>

	<arg name="visualize" default="false"/>
	<arg name="rviz" default="false"/>

	<rosparam command="load" file="$(find ca_gazebo)/config/robots_pose.yaml"/>

	<!-- Launch Gazebo world -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="debug" value="$(arg debug)" />
		<arg name="gui" value="$(arg gui)" />
		<arg name="paused" value="$(arg paused)"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="verbose" value="true"/>
		<arg name="world_name" value="$(arg world_file)"/>
	</include>

	<!-- Spawn robot -->
	<arg name="nr" default="1"/>
	<include file="$(find ca_gazebo)/launch/spawn_multirobot.launch" if="$(eval arg('nr') - 1 > 0)">
    	<arg name="nr" value="$(eval arg('nr') - 1)"/>
  	</include>

</launch>
